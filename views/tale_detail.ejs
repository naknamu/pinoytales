<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head'); %>
  </head>
  <body>
    <%- include('partials/nav'); %>
    
    <main class="tale-detail">
      <div class="container">
        <p class="text-tiny genre" onclick="navigateToGenre('<%= tale.genre.url %>')"><%= tale.genre.name %></p>
        <img src="<%= tale.banner_url %>" alt="<%= tale.title %> banner">
        <h1 class="h1"><%= tale.title %></h1>
        <p onclick="navigateToAuthor('<%= tale.author.url %>')">by <span class="author"> <%= tale.author.name %></span></p>
        <p class="tale-content"><%= tale.content %></p>
      </div>
    </main>
    
    <%- include('partials/footer'); %>

  </body>
</html>